<%= form_for @group, :html => { role: "form", class: "form-horizontal" } do |f| %>
  <div id="all_students">
    <div class="form-group">
      <%= f.label :name, "Group Name", class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :name, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= label_tag :new_students, "New Students", class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= text_field_tag :"new_students[][name]", "", class: "form-control", placeholder: "June Smith" %>
        <%= text_field_tag :"new_students[][phone_number]", "", class: "form-control", placeholder: "555-111-2345" %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="button" class="btn new_student">Add Student</button>
    </div>
  </div>
  <div id="hidden_new_student_section" class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= text_field_tag :"new_students[][name]", "", class: "form-control", placeholder: "June Smith" %>
      <%= text_field_tag :"new_students[][phone_number]", "", class: "form-control", placeholder: "555-111-2345" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit 'Create Group', class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
