<%= form_for @group, :html => { role: "form", class: "form-horizontal" } do |f| %>
  <div class="form-group">
    <%= f.label :name, "Group Name", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= label_tag :existing_students, "Existing Students", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      johnny<br>
      june<br>
    </div>
  </div>
  <div class="form-group">
    <%= label_tag :new_students, "New Students", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= text_field_tag :new_student_name, "", class: "form-control" %>
      <%= button_tag "Add Student", method: "get" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit 'Create Group', class: "btn btn-primary" %>
    </div>
  </div>
<% end %>


