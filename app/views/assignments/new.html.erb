<%= form_for @assignment do |f| %>
  Assignment Name: <%= f.text_field :name, class: 'form-control' %><br>
  Assignment Description: <%= f.text_area :description, class: 'form-control' %></br>
  Question: <%= text_area_tag :"assignment[new_questions][][content]", "", class: 'form-control' %></br>
  Answer: <%= text_field_tag :"assignment[new_questions][][correct_answer]", "", class: 'form-control' %></br>
  <%= f.submit 'Create New Assignment', class: 'btn btn-default btn-lg' %>
<% end %>